@model IEnumerable<BankApp.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<h1>List of bank accounts</h1>

<p>
    <a asp-action="Create">Create new bank account</a>
</p>
<p>
    <a asp-action="Create" asp-controller="Transaction">Transfer money</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
                       <th>
                           @Html.DisplayNameFor(model => model.Balance)
                       </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                <a asp-action="History" asp-route-id="@item.Id">Transaction history</a>
            </td>
        </tr>
}
    </tbody>
</table>
